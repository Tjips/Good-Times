@model GoodTimes.Models.bon

@{
    ViewData["Title"] = "Create";
}

<h1>Bon aanmaken</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                @foreach (var tafel in ViewBag.bestelling as List<bestelling>)
                {
                    <input type="radio" asp-for="Tafelnummer" value="@tafel.Tafel"> @tafel.Tafel<br />
                }
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Bon printen" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Terug</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
